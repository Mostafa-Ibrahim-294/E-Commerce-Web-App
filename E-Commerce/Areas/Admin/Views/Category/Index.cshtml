@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <div class="row pt-4">
        <div class="col-md-6">
            <h2>Category List</h2>
        </div>
        <div class="col-md-6 text-end">
            <a  asp-controller = "Category" asp-action="Create" class="btn btn-primary">Create New Category</a>
		</div>
    </div>
</div>

<table class="table table-striped table-bordered table-hover text-center">
    <thead class="table-dark">
        <tr>
            <th>Category Name</th>
            <th>Category Order</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderBy(u => u.DisplayOrder))
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.DisplayOrder</td>
                <td>
                    <a asp-controller="Category" asp-action="Edit" asp-route-id ="@item.Id" class="btn btn-primary">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                </td>
                <td>
                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ToastrPartial");
	}
}
