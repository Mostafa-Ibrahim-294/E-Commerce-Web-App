@model IEnumerable<Company>
@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <div class="row pt-4">
        <div class="col-md-6">
            <h2>Company List</h2>
        </div>
        <div class="col-md-6 text-end">
            <a asp-controller="Company" asp-action="Create" class="btn btn-primary">Create New Company</a>
        </div>
    </div>
</div>

<table class="table table-striped table-bordered table-hover text-center">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>State</th>
            <th>City</th>
            <th>StreetAddress</th>
            <th>PhoneNumber</th>
            <th>PostalCode</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.State</td>
                <td>@item.City</td>
                <td>@item.StreetAddress</td>
                <td>@item.PhoneNumber</td>
                <td>@item.PostalCode</td>
                <td>
                    <a asp-controller="Company" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                </td>
                <td>
                    <a asp-controller="Company" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ToastrPartial");
    }
}


