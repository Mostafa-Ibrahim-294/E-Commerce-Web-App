@model IEnumerable<OrderHeaderVM>
@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <div class="row pt-4">
</div>

<table class="table table-striped table-bordered table-hover text-center">
    <thead class="table-dark">
        <tr>
            <th>Order Id</th>
            <th>Name</th>
            <th>Phone Number</th>
            <th>Email</th>
            <th>Order Status</th>
            <th>Order Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.PhoneNumber</td>
                <td>@item.Email</td>
                <td>@item.OrderStatus</td>
                <td>@item.OrderTotal</td>
                <td>
                    <a asp-controller="Order" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">
                        <i class="bi bi-pencil"></i> Details
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ToastrPartial");
    }
}
