@model RoleVM

@{
    ViewData["Title"] = "Create Role";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-5">
        <div class="card shadow">
            <div class="card-header text-center">
                <h4><i class="bi bi-shield-lock"></i> Create New Role</h4>
            </div>
            <div class="card-body">
                <form asp-action="CreateRole" method="post" autocomplete="off">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <div class="mb-3">
                        <label asp-for="RoleName" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-shield"></i></span>
                            <input asp-for="RoleName" class="form-control" placeholder="Enter role name" />
                        </div>
                        <span asp-validation-for="RoleName" class="text-danger"></span>
                    </div>
                    
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-plus-circle"></i> Create Role
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>